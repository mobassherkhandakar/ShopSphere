# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t ShopSphere`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system ShopSphere && \
          adduser --system -G ShopSphere ShopSphere

COPY dist/apps/ShopSphere ShopSphere/
RUN chown -R ShopSphere:ShopSphere .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix ShopSphere --omit=dev -f install

CMD [ "node", "ShopSphere" ]
